from coffee import Coffee
from person import Person


class Coffee_Payment_Calculator:
    def __init__(self):
        self.days_sum = None  # List of coffee purchases

    def cost_by_one_person(self, coffee: Coffee, person: Person):
        if not self.days_sum:
            self.total_days_sum()
        if self.days_sum <= 0:
            raise ValueError('No days sum available')
        
        return (coffee.cost * person.days_per_week) / self.days_sum

    def total_days_sum(self):
        self.days_sum = 0
