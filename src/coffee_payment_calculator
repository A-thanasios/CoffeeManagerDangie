class Coffee_Payment_Calculator:
    def __init__(self):
        self.days_sum = None  # List of coffee purchases

    def cost_by_one_person(self, cost, days_per_week):
        if not self.days_sum:
            self.total_days_sum()
        if self.days_sum <= 0:
            raise ValueError('No days sum available')
        
        return (cost * days_per_week) / self.days_sum

    def total_days_sum(self):
        self.days_sum = 0
